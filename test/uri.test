package require meuri

# clean up a parse and put in a consistent order
proc cleanparse {parse} {
    array set x $parse
    set res {}
    foreach n $::uri::uri_parts {
        if {[info exists x($n)] && $x($n) ne ""} {
            lappend res $n $x($n)
        }
    }
    return $res
}

